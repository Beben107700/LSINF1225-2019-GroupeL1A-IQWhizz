<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings">

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginTop="166dp"
        android:layout_marginEnd="99dp"
        android:ems="10"
        android:inputType="textLongMessage|textPersonName"
        android:text="firstname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginTop="258dp"
        android:layout_marginEnd="99dp"
        android:ems="10"
        android:hint="firstname.name@student.uclouvain.be"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginTop="352dp"
        android:layout_marginEnd="99dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginTop="456dp"
        android:layout_marginEnd="249dp"
        android:text="@string/male"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="233dp"
        android:layout_marginTop="456dp"
        android:layout_marginEnd="99dp"
        android:text="@string/female"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="247dp"
        android:layout_height="60dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="603dp"
        android:layout_marginEnd="82dp"
        android:background="@drawable/boutonapply"
        android:onClick="buttonPress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageEmail"
        android:layout_width="63dp"
        android:layout_height="121dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="258dp"
        android:contentDescription="imageEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/texteemail" />

    <ImageView
        android:id="@+id/imagefirstname"
        android:layout_width="125dp"
        android:layout_height="37dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="137dp"
        android:layout_marginEnd="191dp"
        android:contentDescription="imageEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/firstname" />

    <ImageView
        android:id="@+id/imageage"
        android:layout_width="90dp"
        android:layout_height="28dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="512dp"
        android:layout_marginEnd="239dp"
        android:contentDescription="imageEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/age" />

    <ImageView
        android:id="@+id/imagepassword"
        android:layout_width="141dp"
        android:layout_height="267dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="221dp"
        android:layout_marginEnd="181dp"
        android:contentDescription="imagePassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/textepassword" />

    <ImageView
        android:id="@+id/imagegender"
        android:layout_width="104dp"
        android:layout_height="34dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="413dp"
        android:layout_marginEnd="212dp"
        android:contentDescription="imageEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gender" />

    <EditText
        android:id="@+id/age_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginTop="540dp"
        android:layout_marginEnd="99dp"
        android:ems="10"
        android:hint="Age"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="354dp"
        android:layout_height="108dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imagelog_in" />

    <Button
        android:id="@+id/delete"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="673dp"
        android:layout_marginEnd="106dp"
        android:background="@drawable/delete"
        android:onClick="pressDelete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>